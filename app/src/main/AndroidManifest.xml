<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neonfunapps.scorekeeper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:fullBackupContent="true"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.neonfunapps.scorekeeper.SpalshActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>
        <activity android:name="com.neonfunapps.scorekeeper.MainActivity">
        </activity>

        <activity android:name="com.neonfunapps.scorekeeper.football.FootballActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="Football"
            android:launchMode = "singleTop">

        </activity>
        <activity android:name="com.neonfunapps.scorekeeper.basketball.BasketballActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="Basketball"
            android:launchMode = "singleTop">
        </activity>
        <activity android:name="com.neonfunapps.scorekeeper.cricket.CricketActivity"
            android:label="Cricket"
            android:launchMode = "singleTop">
        </activity>
        <activity android:name="com.neonfunapps.scorekeeper.tennis.TennisActivity"
            android:label="Tennis"
            android:launchMode = "singleTop">
        </activity>
        <activity android:name="com.neonfunapps.scorekeeper.rugby.RugbyActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="Rugby"
            android:launchMode = "singleTop">
        </activity>
        <activity android:name="com.neonfunapps.scorekeeper.hockey.HockeyActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="Hockey"
            android:launchMode = "singleTop">
        </activity>
        <activity android:name="com.neonfunapps.scorekeeper.volleyball.VolleyballActivity"
            android:label="Volleyball"
            android:launchMode = "singleTop">
        </activity>
        <activity android:name="com.neonfunapps.scorekeeper.badminton.BadmintonActivity"
            android:label="Badminton"
            android:launchMode = "singleTop">
        </activity>
        <activity android:name="com.neonfunapps.scorekeeper.tabletennis.TabletennisActivity"
            android:label="Table tennis"
            android:launchMode = "singleTop">
        </activity>
        <activity android:name="com.neonfunapps.scorekeeper.handball.HandballActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="Handball"
            android:launchMode = "singleTop">
        </activity>
    </application>

</manifest>
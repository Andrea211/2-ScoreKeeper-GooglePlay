<?xml version="1.0" encoding="utf-8"?>
<android.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/gridItemImage"
        android:layout_width="@dimen/width_150"
        android:layout_height="@dimen/width_150"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_10"
        android:contentDescription="@string/grid_item_background"
        android:padding="@dimen/margin_20"
        android:scaleType="fitCenter">
    </androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/gridItemText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_10"
        android:background="@color/grid_transparent"
        android:gravity="center"
        android:textColor="@color/gray900"
        android:textSize="@dimen/h6"
        android:textStyle="bold"
        app:textAllCaps="true"
        tools:text="@string/sport">
    </androidx.appcompat.widget.AppCompatTextView>

</android.widget.FrameLayout>